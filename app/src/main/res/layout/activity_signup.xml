<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_registration_background"
    tools:context=".SignupActivity"
    android:gravity="center">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:lottie_rawRes="@raw/login_anim"
        android:id="@+id/signup_anim"
        app:lottie_autoPlay="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signupDescription"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#78208C"
        android:layout_marginVertical="20dp"
        android:padding="25dp"
        android:layout_marginHorizontal="30dp"/>

    <EditText
        android:layout_width="300dp"
        android:padding="7dp"
        android:drawableStart="@drawable/person_outline_icon"
        android:layout_height="43dp"
        android:layout_margin="3dp"
        android:background="@drawable/black_stroke"
        android:hint="User name"
        android:textColorHint="@color/black"
        android:gravity="center"
        android:id="@+id/edtxt_name"/>

    <EditText
        android:layout_width="300dp"
        android:padding="7dp"
        android:drawableStart="@drawable/email_logo24"
        android:layout_height="43dp"
        android:layout_margin="3dp"
        android:background="@drawable/black_stroke"
        android:hint="Email-id"
        android:textColorHint="@color/black"
        android:gravity="center"
        android:id="@+id/edtxt_email"/>
    <EditText
        android:layout_width="300dp"
        android:padding="7dp"
        android:drawableStart="@drawable/outline_lock_24"
        android:layout_height="43dp"
        android:layout_margin="3dp"
        android:background="@drawable/black_stroke"
        android:hint="Password"
        android:textColorHint="@color/black"
        android:gravity="center"
        android:id="@+id/edtxt_password"/>
    <EditText
        android:layout_width="300dp"
        android:padding="7dp"
        android:drawableStart="@drawable/outline_lock_24"
        android:layout_height="43dp"
        android:layout_margin="3dp"
        android:background="@drawable/black_stroke"
        android:hint="Re-enter password"
        android:textColorHint="@color/black"
        android:gravity="center"
        android:id="@+id/edtxt_repassword"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressbar"
        android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="300dp"
        android:layout_height="43dp"
        android:background="@drawable/onboard_btn"
        android:text="Register  ->"
        android:textAllCaps="false"
        android:id="@+id/registerbtn"
        android:textSize="17sp"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textSize="17sp"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login here"
            android:id="@+id/loginhere"
            android:layout_marginStart="9dp"
            android:textSize="17sp"
            android:textColor="#0D2C6A" />

    </LinearLayout>


</LinearLayout>